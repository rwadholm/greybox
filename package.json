{
  "name": "greybox",
  "version": "0.0.1",
  "description": "A minimal desktop writer",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "repository": "https://github.com/rwadholm/greybox",
  "keywords": [
    "Greybox",
    "IDE",
    "Notepad",
    "demo"
  ],
  "author": "Bob Wadholm",
  "license": "CC0-1.0",
  "devDependencies": {
    "electron": "^5.0.6",
    "electron-builder": "^21.0.15"
  },
  "build": {
    "appId": "Greybox Editor",
    "fileAssociations": [
      {
        "ext": [
          "txt",
          "gxt"
        ],
        "name": "Plain Text",
        "role": "Editor"
      }
    ],
    "mac": {
      "category": "Editor"
    }
  },
  "postinstall": "electron-builder install-app-deps"
}
